<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sidesalite1.app.controller.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" styleClass="login-container" BorderPane.alignment="CENTER">
         <children>
            <Label text="Selamat Datang di SiDesaLite" styleClass="header-label">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Silakan Login" styleClass="sub-header-label">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" promptText="Username" styleClass="text-input">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-input">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </PasswordField>
            <Button onAction="#handleLogin" text="Login" styleClass="primary-button" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>